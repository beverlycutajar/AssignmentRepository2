@model IEnumerable<ShoppingCart.Application.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<div class="container">
    <div class="row">
        @foreach(var p in Model)
        {
        <div class="col-sm-4">
            <div class="card" style="width:18rem;">
                <div class="image">
                    <img src="@p.ImageUrl" class="image" alt="image" crossorigin="anonymous" />
                </div>

                <div class="card-body">
                    <h5 class="card-title">@p.Name</h5>
                    <p class="card-text">@p.Price</p>
                    <a href="Products/details?id=@p.Id" class="btn btn-dark">Details</a>

                    @if(User.IsInRole("Admin")){

                    <a href="Products/delete?id=@p.Id" class="btn btn-danger" onclick="return window.confirm("Are you sure?")>Delete</a>
                }
                </div>
            </div>
            
        </div>
        }
    </div>
</div>
